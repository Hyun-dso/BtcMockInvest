<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kim.donghyun.repository.BtcCandle1DRepository">
    <resultMap id="candleMap" type="kim.donghyun.model.entity.BtcCandle1D">
        <id property="id" column="id"/>
        <result property="open" column="open"/>
        <result property="high" column="high"/>
        <result property="low" column="low"/>
        <result property="close" column="close"/>
        <result property="volume" column="volume"/>
        <result property="candleTime" column="candle_time"/>
    </resultMap>

    <insert id="insertCandle" parameterType="kim.donghyun.model.entity.BtcCandle1D">
        INSERT IGNORE INTO btc_candle_1d (open, high, low, close, volume, candle_time)
        VALUES (#{open}, #{high}, #{low}, #{close}, #{volume}, #{candleTime})
    </insert>

    <select id="findByCandleTime" parameterType="java.time.LocalDateTime" resultMap="candleMap">
        SELECT * FROM btc_candle_1d WHERE candle_time = #{candleTime}
    </select>

    <select id="findRecentCandles" parameterType="int" resultMap="candleMap">
        SELECT * FROM btc_candle_1d ORDER BY candle_time DESC LIMIT #{limit}
    </select>

</mapper>
