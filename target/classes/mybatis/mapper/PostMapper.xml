<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kim.donghyun.repository.PostRepository">
	<resultMap id="postMap" type="kim.donghyun.model.entity.Post">
		<id property="postId" column="post_id" />
		<result property="userId" column="user_id" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="createdAt" column="created_at" />
	</resultMap>

        <insert id="insert"
                parameterType="kim.donghyun.model.entity.Post"
                useGeneratedKeys="true" keyProperty="postId">
                INSERT INTO post (user_id, title, content, created_at)
                VALUES (#{userId}, #{title}, #{content}, NOW())
        </insert>

	<select id="findAll" resultMap="postMap">
		SELECT * FROM post ORDER BY post_id DESC
	</select>

	<select id="findById" parameterType="long" resultMap="postMap">
		SELECT * FROM post WHERE post_id = #{postId}
	</select>

	<select id="findByUserId" parameterType="long"
		resultMap="postMap">
		SELECT * FROM post WHERE user_id = #{userId} ORDER BY post_id DESC
	</select>

</mapper>
