<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kim.donghyun.repository.UserRepository">

	<resultMap id="userMap" type="kim.donghyun.model.entity.User">
		<id property="id" column="id" />
		<result property="email" column="email" />
		<result property="password" column="password" />
		<result property="username" column="username" />
		<result property="createdAt" column="created_at" jdbcType="TIMESTAMP" />
		<result property="lastLoginAt" column="last_login_at" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 이메일로 조회 -->
	<select id="findByEmail" resultMap="userMap" parameterType="String">
		SELECT * FROM `user` WHERE email = #{email}
	</select>

	<!-- 유저 등록 -->
	<insert id="insert" parameterType="kim.donghyun.model.entity.User" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `user` (email, password, username, created_at)
		VALUES (#{email}, #{password}, #{username}, NOW())
	</insert>

	<!-- 유저네임 중복 검사 -->
	<select id="findByUsername" resultMap="userMap" parameterType="String">
		SELECT * FROM `user` WHERE username = #{username}
	</select>

	<!-- ✅ 아이디로 조회 -->
	<select id="findById" resultMap="userMap" parameterType="long">
		SELECT * FROM `user` WHERE id = #{id}
	</select>

</mapper>

